<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="windowActionBar">false</item>

    </style>

    <!--For TextViews-->
    <style name="TextViewRegular" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/matter_regular</item>
    </style>

    <style name="TextViewSemiBold" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/matter_semibold</item>
    </style>

    <style name="TextViewMedium" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/matter_medium</item>
    </style>

    <style name="TextViewBold" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/matter_bold</item>
    </style>

    <style name="TextTitleStyle" parent="TextViewMedium">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="UnderlineTextParagraphStyle" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:fontFamily">@font/matter_medium</item>
        <item name="android:gravity">start|top</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <!--        <item name="android:background">@drawable/bg_underline_dark</item>-->
    </style>

    <!--For EditTexts-->
    <style name="EditTextStyle" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textColorHint">@color/textGrayDark</item>
        <item name="android:fontFamily">@font/matter_regular</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:background">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginEnd">@dimen/_12sdp</item>
    </style>

    <style name="EditTextUnderlineStyle" parent="EditTextStyle">
        <item name="android:textColor">@color/grayDarker</item>
        <item name="android:textColorHint">@color/textGrayDark</item>
        <item name="android:fontFamily">@font/matter_regular</item>
        <item name="android:gravity">start|top</item>
        <!--        <item name="android:background">@drawable/bg_underline</item>-->
        <item name="android:paddingBottom">@dimen/_13sdp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>

    <style name="EditTextOptStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_41sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:layout_marginEnd">@dimen/_4sdp</item>
        <item name="android:layout_marginStart">@dimen/_4sdp</item>
    </style>

    <style name="EditTextDateTimeStyle" parent="EditTextStyle">
        <item name="android:cursorVisible">false</item>
        <item name="android:editable">false</item>
    </style>

    <style name="EditTextDisabledStyle" parent="EditTextStyle">
        <item name="android:enabled">false</item>
    </style>

    <style name="EditTextOtpStyle" parent="android:Widget.EditText">
        <item name="android:layout_width">@dimen/_38sdp</item>
        <item name="android:layout_height">@dimen/_38sdp</item>
        <!--        <item name="android:background">@drawable/selector_edittext_background</item>-->
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/textGrayDark</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">@integer/otp_single_field</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:enabled">false</item>
    </style>

    <!--For Buttons-->
    <style name="ButtonXLargeOrangeStyle" parent="android:Widget.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_38sdp</item>
        <item name="android:fontFamily">@font/matter_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <!--        <item name="android:background">@drawable/bg_orange_corner_10</item>-->
        <item name="android:foreground">@drawable/ripple_box_corner_10</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
    </style>

    <style name="ButtonSmallOrangeStyle" parent="ButtonXLargeOrangeStyle">
        <item name="android:layout_height">@dimen/_26sdp</item>
        <item name="android:background">@drawable/bg_round_corner_light_black</item>
        <item name="android:foreground">@drawable/ripple_box_corner_10</item>
    </style>

    <!--Circle background-->
    <style name="BackgroundCircleOrangeStyle" >
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:gravity">center</item>
        <!--        <item name="android:background">@drawable/bg_orange_circle</item>-->
        <item name="android:foreground">@drawable/ripple_round</item>
    </style>

    <!--For Dialogs-->
    <style name="BaseDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:fontFamily">@font/matter_medium</item>
        <item name="android:editTextColor">@color/white</item>
    </style>

    <style name="DialogCenterStyle" parent="BaseDialogStyle">
        <item name="android:windowAnimationStyle">@style/DialogCenterAnimation</item>
    </style>

    <style name="DialogBottomStyle" parent="BaseDialogStyle">
        <item name="android:windowAnimationStyle">@style/DialogBottomAnimation</item>
    </style>

    <style name="DialogCenterAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="DialogBottomAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_out</item>
    </style>

    <!--For ShapeableImageViews-->
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize4Percent" parent="">
        <item name="cornerSize">4%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize5Percent" parent="">
        <item name="cornerSize">5%</item>
    </style>

    <!--For Spinners-->
    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <!--        <item name="android:background">@drawable/spinner_background</item>-->
    </style>

    <style name="Theme_Dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">70%</item>
        <item name="android:windowMinWidthMinor">70%</item>
        <!--        <item name="android:windowBackground">@color/transparentDim</item>-->
        <item name="android:backgroundDimEnabled">false</item>
        <!--        <item name="android:background">@color/transparentDim</item>-->
    </style>

</resources>